# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/swimming-coach-bot

# Admin Telegram User IDs (через запятую)
ADMIN_IDS=123456789,987654321

# Timezone
TZ=Europe/Moscow

pm2 start npm --name "sportbot" -- run dev  # Запуск
pm2 stop sportbot                            # Остановка
pm2 restart sportbot                         # Перезагрузка
pm2 logs sportbot                            # Просмотр логов
pm2 save                                     # Сохранить конфигурацию
pm2 startup                                  # Автозапуск при перезагрузке